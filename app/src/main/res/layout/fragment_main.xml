<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karanrajpal.nanohub.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/popular_movies_button"
        android:text="Popular Movies"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/stock_hawk_button"
        android:text="Stock Hawk"
        android:layout_below="@+id/popular_movies_button"
        android:onClick="showToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/build_it_bigger_button"
        android:text="Build It Bigger"
        android:layout_below="@+id/stock_hawk_button"
        android:onClick="showToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/make_your_app_material_button"
        android:text="Make Your App Material"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_centerHorizontal="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/go_ubiquitous_button"
        android:text="Go Ubiquitous"
        android:layout_below="@+id/make_your_app_material_button"
        android:layout_alignStart="@+id/build_it_bigger_button"
        android:onClick="showToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/capstone_button"
        android:text="Capstone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="showToast" />

</LinearLayout>
